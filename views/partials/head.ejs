    <meta name="keywords" content="minecraft hosting, vps hosting, rdp hosting, bot hosting, free minecraft server, cheap vps, windows rdp, discord bot hosting">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
